  <p class="alert alert-danger" role="alert"><%= get_flash(@conn, :error) %></p>
</main>
<footer>
  <nav class="navbar navbar-expand-md navbar-light bg-light d-md-none fixed-bottom top-bottom-nav pb-10">

    <div class="bottom-navbar collapse navbar-collapse" id="collapse_character_nav_bottom_target">
      <ul class="navbar-nav">
        <li class="nav-item subpage-nav">
          <a class="static-nav-link nav-link" href={"/character/#{@character["response"]["name"]["first"]}/general"}>General</a>
        </li>
        <li class="nav-item subpage-nav">
          <a class="static-nav-link nav-link" href={"/character/#{@character["response"]["name"]["first"]}/stats"}>Stats</a>
        </li>
        <li class="nav-item subpage-nav">
          <a class="static-nav-link nav-link" href={"/character/#{@character["response"]["name"]["first"]}/directives"}>Directives</a>
        </li>
        <li class="nav-item subpage-nav">
          <a class="static-nav-link nav-link" href={"/character/#{@character["response"]["name"]["first"]}/weapons"}>Weapons</a>
        </li>
      </ul>
    </div>
      <h1><%= @character["response"]["name"]["first"] %></h1>
    <button class="navbar-toggler collapsed" data-toggle="collapse" data-target="#collapse_character_nav_bottom_target">
      <span class="navbar-toggler-icon"></span>
    </button>
  </nav>
</footer>
